# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=jdbc:postgresql://your-project.supabase.co:5432/postgres?sslmode=require
DATABASE_USERNAME=postgres.your-project-ref
DATABASE_PASSWORD=your-database-password

# File Upload Directory
FILE_UPLOAD_DIR=/app/uploads

# Server Port (Railway auto-sets this)
PORT=8080

# VNPay Configuration (Optional - only if using VNPay payment)
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_RETURN_URL=https://your-domain.railway.app/vnpay/return

# Email Configuration (Gmail SMTP)
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password
